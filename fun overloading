#include<iostream>
using namespace std;
int sum(int a, int b)
{
    return a+b;
}
int sum (int a, int b, int c)
{
    return a+b+c;
}
int main()
{
    int a,b,c;
    cout<<"Enter three numbers:"<<endl;
    cin>>a>>b>>c;

    cout<<"The sum of "<<a<<" and "<<b<<" is "<<sum(a,b)<<endl;
    cout<<"The sum of "<<a<<" and "<<b<<" and "<<c<<" is "<<sum(a,b,c)<<endl;

}
